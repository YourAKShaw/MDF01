{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node" // Ensure Node.js module resolution
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
